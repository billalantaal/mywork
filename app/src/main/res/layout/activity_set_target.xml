<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_target"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bilal.madical.SetTarget"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/userfortarget"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userfortarget"
        android:id="@+id/namelayout"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/name"
        android:text="Name:"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Name of Product"
        android:paddingTop="2dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namelayout"
        android:id="@+id/weightlayout"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:id="@+id/weight"
            android:text="Weight:"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Weight of Product"
            android:paddingTop="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weightlayout"
        android:id="@+id/disclayout"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:id="@+id/disc"
            android:text="Discription:"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Discription of Product"
            android:paddingTop="2dp"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/disclayout"
        android:id="@+id/starttimelayout"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:id="@+id/starttime"
            android:text="Start Time:"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Start Date of Selling"
            android:paddingTop="2dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/starttimelayout"
        android:id="@+id/endtimelayout"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:id="@+id/endtime"
            android:text="End Time:"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="End date of Selling"
            android:paddingTop="2dp"
            />


    </LinearLayout>



</RelativeLayout>
